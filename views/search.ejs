<% include ./partials/header %>

<div class="container h-100">
    <div class="row h-100 justify-content-center">
        <div class="col-12 col-sm-8 col-lg-5 h-100 text-center py-5">
            <div class="d-flex flex-column mh-100 overflow-y-hidden">
                <div>
                    <h1 class="h1 mb-5">Search user</h1>

                    <% include ./partials/message_flash %>

                    <form action="/search" method="GET">
                        <div class="d-flex align-items-center">
                            <div class="flex-fill py-1">
                                <input type="text" class="form-control is-rounded" name="search" placeholder="Nickname"
                                    required>
                            </div>
                            <div>
                                <input type="submit" class="btn btn-outline-primary is-rounded ml-3 px-4" value="Search" />
                            </div>
                        </div>
                    </form>
                </div>
                <div class="flex-grow-1 mt-3 overflow-y-only">
                    <% include ./partials/search_list %>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ./partials/footer %>