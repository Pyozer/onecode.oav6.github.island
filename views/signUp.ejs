<% include ./partials/header %>

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-12 col-sm-8 col-lg-5 text-center">
            <h1 class="h1 mb-5">Sign Up</h1>

            <% include ./partials/message_flash %>

            <form action="/signUp" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control is-rounded" name="nickname" placeholder="Nickname" required>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control is-rounded" name="email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control is-rounded" name="password" placeholder="Password" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control is-rounded" name="fullname" placeholder="Fullname" required>
                </div>
                <input type="submit" class="btn btn-outline-primary is-rounded mt-3 px-4" value="Submit" />
            </form>
            <div class="mt-5">
                <span>You already have an account ? </span>
                <a href="/signIn" class="mt-3">Sign In</a>
            </div>
        </div>
    </div>
</div>

<% include ./partials/footer %>